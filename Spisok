#include <iostream>
using namespace std;

class Node {
public:
    int data;
    Node* next;

    Node(int val) : data(val), next(NULL) {}
};

class LinkedList {
private:
    Node* head;

    void print_list(Node* node) {
        if(node == NULL) return;
        cout << node->data << endl;
        print_list(node->next);
    }

public:
    LinkedList() : head(NULL) {}

    void add_node(int data) {
        Node* new_node = new Node(data);
        if(head == NULL) {
            head = new_node;
        }
        else {
            Node* current_node = head;
            while(current_node->next != NULL) {
                current_node = current_node->next;
            }
            current_node->next = new_node;
        }
    }

    void print() {
        print_list(head);
    }
};

int main() {
    setlocale(LC_ALL, "rus");
    
    LinkedList list;
    
    list.add_node(1);
    list.add_node(2);
    list.add_node(3);
    
    cout << "Ñâÿçíûé ñïèñîê:" << endl;
    list.print();

    return 0;
}
