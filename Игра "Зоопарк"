// Файл: zoo/Animal.java
package zoo;

public abstract class Animal {
    protected String name;
    protected int age;
    
    public Animal(String name, int age) {
        this.name = name;
        this.age = age;
    }
    
    public abstract void makeSound();
    
    public void eat() {
        System.out.println(name + " ест");
    }
}

// Файл: zoo/interfaces/Flyable.java
package zoo.interfaces;

public interface Flyable {
    void fly();
}

// Файл: zoo/interfaces/Swimmable.java
package zoo.interfaces;

public interface Swimmable {
    void swim();
}

// Файл: zoo/animals/Lion.java
package zoo.animals;

import zoo.Animal;

public class Lion extends Animal {
    public Lion(String name, int age) {
        super(name, age);
    }
    
    @Override
    public void makeSound() {
        System.out.println(name + " рычит: Рррр!");
    }
}

// Файл: zoo/animals/Eagle.java
package zoo.animals;

import zoo.Animal;
import zoo.interfaces.Flyable;

public class Eagle extends Animal implements Flyable {
    public Eagle(String name, int age) {
        super(name, age);
    }
    
    @Override
    public void makeSound() {
        System.out.println(name + " кричит: Киии!");
    }
    
    @Override
    public void fly() {
        System.out.println(name + " летит высоко в небе");
    }
}

// Файл: zoo/animals/Dolphin.java
package zoo.animals;

import zoo.Animal;
import zoo.interfaces.Swimmable;

public class Dolphin extends Animal implements Swimmable {
    public Dolphin(String name, int age) {
        super(name, age);
    }
    
    @Override
    public void makeSound() {
        System.out.println(name + " щелкает и свистит");
    }
    
    @Override
    public void swim() {
        System.out.println(name + " плавает в океане");
    }
}

// Файл: Main.java
import zoo.Animal;
import zoo.animals.*;
import zoo.interfaces.*;

public class Main {
    public static void main(String[] args) {
        Animal[] animals = new Animal[3];
        animals[0] = new Lion("Симба", 5);
        animals[1] = new Eagle("Акила", 3);
        animals[2] = new Dolphin("Флиппер", 8);
        
        for (Animal animal : animals) {
            animal.makeSound();
            animal.eat();
            
            if (animal instanceof Flyable) {
                ((Flyable) animal).fly();
            }
            
            if (animal instanceof Swimmable) {
                ((Swimmable) animal).swim();
            }
            
            System.out.println();
        }
    }
}
